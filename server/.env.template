# ============================================================================
# server/.env.template — UniEasy Backend
# Copy this to server/.env.local and fill in your values.
# NEVER commit .env.local — it is in .gitignore.
# ============================================================================

# Supabase
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key...
SUPABASE_ANON_KEY=eyJ...your-anon-key...

# Database URL (for direct psql access / migrations)
DB_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres

# Clerk
CLERK_SECRET_KEY=sk_test_...your-clerk-secret...

# Sentry (optional — leave empty to disable error tracking)
SENTRY_DSN=

# Server
PORT=8080
CLIENT_ORIGIN=http://localhost:5173
NODE_ENV=development
LOG_LEVEL=debug
